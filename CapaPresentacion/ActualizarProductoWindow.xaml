<Window x:Class="CapaPresentacion.ActualizarProductoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentacion"
        mc:Ignorable="d"
        Title="ActualizarProductoWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="ID Producto:" Margin="0,5"/>
        <TextBox x:Name="txtId" Grid.Row="1" Margin="0,5" IsReadOnly="True"/>

        <Label Grid.Row="2" Content="Nombre:" Margin="0,5"/>
        <TextBox x:Name="txtNombre" Grid.Row="3" Margin="0,5"/>

        <Label Grid.Row="4" Content="Precio:" Margin="0,5"/>
        <TextBox x:Name="txtPrecio" Grid.Row="5" Margin="0,5"/>

        <Label Grid.Row="6" Content="Stock:" Margin="0,5"/>
        <TextBox x:Name="txtStock" Grid.Row="7" Margin="0,5"/>

        <Button Grid.Row="8" Content="Actualizar" Margin="0,15,0,0" Width="100"
                Click="BtnActualizar_Click"/>
    </Grid>
</Window>
