<Window x:Class="CapaPresentacion.ProductoFormularioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CapaPresentacion"
        mc:Ignorable="d"
        Title="InsertarProductoWindow" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nombre -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Precio -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Stock -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Botón -->
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Nombre del Producto:" Margin="0,5"/>
        <TextBox x:Name="txtNombre" Grid.Row="1" Margin="0,5"/>

        <Label Grid.Row="2" Content="Precio:" Margin="0,5"/>
        <TextBox x:Name="txtPrecio" Grid.Row="3" Margin="0,5"/>

        <Label Grid.Row="4" Content="Stock:" Margin="0,5"/>
        <TextBox x:Name="txtStock" Grid.Row="5" Margin="0,5"/>

        <Button Grid.Row="6" Content="Registrar"
                Margin="0,15,0,0" Height="35" Width="100" HorizontalAlignment="Left"
                Click="BtnRegistrar_Click"/>
    </Grid>
</Window>
